indent_size=4
tab_width=4

[*.{appxmanifest,build,config,csproj,dbml,discomap,dtd,js,json,jsproj,jsx,lsproj,njsproj,nuspec,proj,props,resjson,resw,resx,StyleCop,targets,tasks,ts,tsx,vbproj,xml,xsd}]
indent_style=space
indent_size=2
tab_width=2

